.container {
  width: 100%;
  height: 100%;
  background-color: whitesmoke;
}

.swipper {
  width: 100%;
  height: 40%;
   background-color: white; 
}

.product_title {
  width: 100%;
  height: 10%;
  background-color: white;
  border-bottom: 5px solid #e6e6e6;
}
.swipper_view{
  position: relative;
  height: 100%;
  bottom: 5%;
}
.product_title_name {
  text-align: center;
  height: 50%;
  margin: auto;
}
.product_title_price {
  text-align: center;
  color: red;
  font-size: 12px;
  height: 50%;
  margin: auto;
}

.product_detail {
  width: 100%;
  height: 30%;
  background-color: white;
}

.footer {
  width: 100%;
  height: 10%;
  position: relative;
  /* bottom: 0; */
  top: 10%;
}

.float {
  position: fixed;
  background-color: grey;
  right: 0;
  bottom: 11%;
  height: 30px;
  /* left: 2%; */
  width: 10%;
  opacity: 0.7;
}

.float_button {
  position: relative;
  width: 50%;
  left: 25%;
  top: 25%;
}

.footer_image {
  width: 30px;
  height: 30px;
}

.footer {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  border-top: 1px solid #e6e6e6;
  font-size: 12px;
}

.footer_car {
  width: 15%;
  border-right: 1px solid #e6e6e6;
}

.footer_col {
  width: 15%;
  border-right: 1px solid #e6e6e6;
}

.footer_addin {
  text-align: center;
  width: 35%;
  color: red;
}

.footer_buy {
  text-align: center;
  width: 35%;
  background-color: black;
  color: white;
}

.footer_view {
  position: relative;
  left: 25%;
  top: 25%;
}

.footer_view_text {
  position: relative;
  top: 25%;
}

.product_detail_title {
  text-align: center;
  font-size: 16px;
  height: 15%;
  position: relative;
  top: 5%;
}

.product_detail_content {
  height: 70%;
  position: relative;
  top: 10%;
  font-size: 14px;
  color: #bfbfbf;
}
