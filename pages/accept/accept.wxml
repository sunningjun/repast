<view class='container'>
  <view class='content'>
    <view class='conent_column'>
      <view class='conent_column_input'>
        <input type='text' placeholder='联系人姓名'></input>
      </view>
    </view>
    <view class='conent_column'>
      <view class='conent_column_input'>
        <input type='text' placeholder='联系电话'></input>
      </view>
    </view>
